---
import Section from "@/components/Section.astro";
import { skills } from "@cv"
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #7a7a7a;
    color: #fff;
    letter-spacing: normal;
    font-size: 0.8rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
  }
</style>